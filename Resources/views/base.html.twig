<!doctype html>
<html lang="{{ app.request.locale }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta charset="UTF-8" />
    <title>
      {% block title %}
        {{ fallbacks.get('site_title') }}
      {% endblock %}
    </title>

    {% block meta %}
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
      <meta name="author" content="SumoCoders">
    {% endblock %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('build/css/app.css') }}" />
    {% endblock %}

    {% block head_javascripts %}
      <script type="text/javascript">
        var jsData = {{ jsData|raw }};
      </script>
    {% endblock %}

    {% block icons %}
      <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
      <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
      <link rel="image_src" href="{{ asset('image_src.png') }}" />
    {% endblock %}
  </head>

  <body class="">
  <!--[if lt IE 8 ]>
  <div id="ie6" class="alert alert-block" role="alert">
    <a href="#" class="close icon-close" data-dismiss="alert" title="{{ 'dialogs.close'|trans|capitalize }}"><span class="sr-only" aria-hidden="true">x</span></a>
    {{ 'core.warnings.oldBrowser'|trans|raw }}
  </div>
  <![endif]-->

  <div id="main-wrapper" class="main-wrapper">
    <div id="main-menu" class="main-menu" role="navigation">
      {{ include('@SumoCodersFrameworkCore/navigation.html.twig') }}
    </div>
    <div id="content-wrapper">
      <div class="main-header">
        <div class="sub-nav row">
          <div class="col col-alternative">
            <nav aria-label="breadcrumb">
              {{ knp_menu_render('breadcrumb', {'template': '@SumoCodersFrameworkCore/BreadCrumb/breadCrumb.html.twig'}) }}
            </nav>
          </div>
          <div class="ml-auto">
            <div class="user-nav d-flex">
              {% if bundleExists('SumoCodersFrameworkMultiUserBundle') %}
                {% if app.user is not null %}
                  <div class="btn-group dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                      <i class="fas fa-user-circle"></i>
                      <span class="hidden-xs hidden-sm">{{ app.user.username }}</span>
                      <span class="fa fa-chevron-right hidden-xs hidden-sm"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      {% block userNavigation %}

                      {% endblock %}
                      {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                        <li><a href="{{ path('sumocoders_frameworkuser_index_index') }}?_switch_user=_exit">{{ 'user.actions.switchBack'|trans|capitalize }}</a></li>
                      {% else %}
                        <li><a href="{{ path('multi_user_logout') }}">{{ 'sumocoders.multiuserbundle.navigation.logout'|trans|capitalize }}</a></li>
                      {% endif %}
                    </ul>
                  </div>
                {% endif %}
              {% endif %}
              {% if bundleExists('SumoCodersFrameworkSearchBundle') %}
                {{ include('SumoCodersFrameworkSearchBundle::searchBox.html.twig' )}}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      <div class="header-title">
        {{ include('@SumoCodersFrameworkCore/notifications.html.twig') }}
        <div class="header-title-bar">
          {% block header_title %}

          {% endblock %}
        </div>
      </div>
      {% if block('header_navigation') is defined %}
        <div class="actions clearfix">
          <div class="action-buttons">
            {{ block('header_navigation') }}
          </div>
        </div>
      {% endif %}
      <section id="main" class="main-content" role="main">
        <div class="container-fluid">
          {% block main %}

          {% endblock %}
        </div>
      </section>
    </div>
    <footer class="footer">
      {% block footer %}
        <div class="container-fluid">
          <div class="row hidden-md hidden-lg">
            <a href="#main-wrapper" class="pull-right back-to-top"><i class="fa fa-chevron-circle-up"></i> {{ 'core.interface.backToTop'|trans|capitalize }}</a>
          </div>
        </div>
      {% endblock %}
    </footer>
  </div>

  {{ include('@SumoCodersFrameworkCore/dialogs.html.twig') }}

  {% block javascripts %}
  {% endblock %}

  {% if app.environment == 'dev' %}
    <script src="//localhost:35729/livereload.js"></script>
  {% endif %}
  </body>
</html>
